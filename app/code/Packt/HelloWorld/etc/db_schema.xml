    <table name="helloworld_visitor_log" resource="default" engine="innodb" comment="Visitor Log Table">
        <column xsi:type="int" name="log_id" unsigned="true" identity="true" nullable="false" comment="Log ID"/>
        <column xsi:type="varchar" name="visitor_name" nullable="false" length="255" comment="Visitor Name"/>
        <column xsi:type="timestamp" name="visit_time" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Visit Time"/>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="true" comment="Product ID"/>
        <column xsi:type="text" name="extra_note" nullable="true" comment="Extra Note" disabled="true"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="log_id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="HELLOWORLD_VISITOR_LOG_PRODUCT_ID_CATALOG_PRODUCT_ENTITY_ENTITY_ID"
                    table="helloworld_visitor_log" column="product_id"
                    referenceTable="catalog_product_entity" referenceColumn="entity_id" onDelete="CASCADE"/>

        <index referenceId="HELLOWORLD_VISITOR_LOG_VISITOR_NAME" disabled="true">
            <column name="visitor_name"/>
        </index>

        <index referenceId="HELLOWORLD_VISITOR_LOG_VISIT_TIME">
            <column name="visit_time"/>
        </index>

    </table>
