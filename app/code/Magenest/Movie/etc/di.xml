<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Khai báo Grid Collection -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="movie_listing_data_source" xsi:type="string">
                    Magenest\Movie\Model\ResourceModel\Movie\Grid\Collection
                </item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Customer\Api\CustomerRepositoryInterface">
        <plugin name="magenest_movie_validate_phone_number"
                type="Magenest\Movie\Plugin\CustomerTelephonePlugin"
                sortOrder="10"/>
    </type>

    <!--
        ====================================================================
        PLUGIN: Kiểm tra URL Rewrite trùng lặp trước khi save Blog
        ====================================================================
    -->
    <type name="Magenest\Movie\Model\ResourceModel\Blog">
        <plugin name="magenest_movie_validate_blog_url_rewrite"
                type="Magenest\Movie\Plugin\BlogPlugin"
                sortOrder="10"/>
    </type>

    <!--
        ====================================================================
        CUSTOM ROUTER: Xử lý Blog URL Rewrite
        ====================================================================
        1. RouterList là danh sách các Router trong Magento
           - Magento check Router theo thứ tự trong list
           - Router nào match trước sẽ xử lý request
        3. Flow:
           User request → Magento RouterList → Check từng Router
           → BlogRouter match? Yes → Forward to blog/view
           → BlogRouter match? No → Next Router

        4. Tại sao cần Custom Router?
           - URL gốc: movie/blog/view/id/1 (không SEO friendly)
           - URL mới: blog1.html (SEO friendly)
           - Router giúp map: blog1.html → movie/blog/view/id/1
    -->
    <type name="Magento\Framework\App\RouterList">
        <arguments>
            <argument name="routerList" xsi:type="array">
                <item name="magenest_blog_router" xsi:type="array">
                    <item name="class" xsi:type="string">Magenest\Movie\Controller\Router\BlogRouter</item>
<!--                    mở router-->
                    <item name="disable" xsi:type="boolean">false</item>
                    <item name="sortOrder" xsi:type="string">35</item>
                </item>
            </argument>
        </arguments>
    </type>

    <!--
        ====================================================================
        API REPOSITORY: Preference Binding
        ====================================================================
        Preference binding map Interface → Implementation class

        1. BlogInterface → Blog Model
           - Khi inject BlogInterface, Magento sẽ inject Blog Model

        2. BlogRepositoryInterface → BlogRepository
           - Khi inject BlogRepositoryInterface, Magento inject BlogRepository

        3. BlogSearchResultsInterface → BlogSearchResults
           - Khi tạo SearchResults, Magento dùng BlogSearchResults class
    -->

    <!-- Bind Blog Interface to Blog Model -->
    <preference for="Magenest\Movie\Api\Data\BlogInterface"
                type="Magenest\Movie\Model\Blog"/>

    <!-- Bind Blog Repository Interface to Blog Repository -->
    <preference for="Magenest\Movie\Api\BlogRepositoryInterface"
                type="Magenest\Movie\Model\BlogRepository"/>

    <!-- Bind Blog Search Results Interface to Blog Search Results -->
    <preference for="Magenest\Movie\Api\Data\BlogSearchResultsInterface"
                type="Magenest\Movie\Model\BlogSearchResults"/>


</config>
