<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magenest_blog" resource="default" engine="innodb" comment="Magenest Blog Table">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Blog ID"/>
        <column xsi:type="int" name="author_id" unsigned="true" nullable="false" comment="Admin User ID"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Blog Title"/>
        <column xsi:type="text" name="description" nullable="true" comment="Blog Description"/>
        <column xsi:type="text" name="content" nullable="false" comment="Blog Content"/>
        <column xsi:type="varchar" name="url_rewrite" nullable="false" length="255" comment="URL Key"/>
        <column xsi:type="smallint" name="status" nullable="false" default="1" comment="1: Enabled, 0: Disabled"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Update Time"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="MAGENEST_BLOG_URL_REWRITE_UNIQUE">
            <column name="url_rewrite"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="MAGENEST_BLOG_AUTHOR_ID_ADMIN_USER_USER_ID"
                    table="magenest_blog" column="author_id"
                    referenceTable="admin_user" referenceColumn="user_id"
                    onDelete="CASCADE"/>

        <index referenceId="MAGENEST_BLOG_TITLE" indexType="btree">
            <column name="title"/>
        </index>
        <index referenceId="MAGENEST_BLOG_FULLTEXT_SEARCH" indexType="fulltext">
            <column name="content"/>
        </index>
    </table>

    <table name="magenest_category" resource="default" engine="innodb" comment="Blog Category Table">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Category ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Category Name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="MAGENEST_CATEGORY_NAME" indexType="btree">
            <column name="name"/>
        </index>
    </table>

    <table name="magenest_blog_category" resource="default" engine="innodb" comment="Relation Table">
        <column xsi:type="int" name="blog_id" unsigned="true" nullable="false" comment="Blog ID"/>
        <column xsi:type="int" name="category_id" unsigned="true" nullable="false" comment="Category ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="blog_id"/>
            <column name="category_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_BLOG_ID" table="magenest_blog_category"
                    column="blog_id" referenceTable="magenest_blog" referenceColumn="id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_CAT_ID" table="magenest_blog_category"
                    column="category_id" referenceTable="magenest_category" referenceColumn="id" onDelete="CASCADE"/>
    </table>

    <table name="magenest_course_document" resource="default" engine="innodb">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" />

        <column xsi:type="int" name="product_id" unsigned="true" nullable="false"/>

        <column xsi:type="varchar" name="title" nullable="false" length="255"/>

        <!-- Loại: link hoặc file -->
        <column xsi:type="varchar" name="type" nullable="false" length="10" default="link"/>

        <column xsi:type="varchar" name="link_url" nullable="true" length="500"/>

        <column xsi:type="varchar" name="file_path" nullable="true" length="255"/>

        <column xsi:type="varchar" name="file_name" nullable="true" length="255"/>

        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="COURSE_DOC_PRODUCT_ID_CATALOG_PRODUCT_ENTITY"
                    table="magenest_course_document" column="product_id"
                    referenceTable="catalog_product_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>

        <index referenceId="MAGENEST_COURSE_DOCUMENT_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>

    </table>
</schema>
