<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magenest_course_document" resource="default" engine="innodb">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" />

        <column xsi:type="int" name="product_id" unsigned="true" nullable="false"/>

        <column xsi:type="varchar" name="title" nullable="false" length="255"/>

        <!-- Loại: link hoặc file -->
        <column xsi:type="varchar" name="type" nullable="false" length="10" default="link"/>

        <column xsi:type="varchar" name="link_url" nullable="true" length="500"/>

        <column xsi:type="varchar" name="file_path" nullable="true" length="255"/>

        <column xsi:type="varchar" name="file_name" nullable="true" length="255"/>

        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="COURSE_DOC_PRODUCT_ID_CATALOG_PRODUCT_ENTITY"
                    table="magenest_course_document" column="product_id"
                    referenceTable="catalog_product_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>

        <index referenceId="MAGENEST_COURSE_DOCUMENT_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>

    </table>
</schema>
