<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <!-- Argument data: Cấu hình cơ bản cho JS component -->
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <!-- Provider: Cho biết form lấy data từ đâu (dataSource) -->
            <item name="provider" xsi:type="string">movie_form.movie_form_data_source</item>
            <!-- Deps: Đảm bảo dataSource load trước form -->
            <item name="deps" xsi:type="string">movie_form.movie_form_data_source</item>
        </item>

        <item name="label" xsi:type="string" translate="true">Movie</item>
                <!-- Template chuẩn của form -->
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <!-- Namespace: Phải khớp với tên file XML và layout uiComponent name -->
        <namespace>movie_form</namespace>
        <!-- DataScope: Root scope cho data POST (dùng 'data' để đơn giản, giống core) -->
        <dataScope>data</dataScope>
        <buttons>
            <button name="back"> <!-- name back để m2 hiểu các js liên quan đến việc back  -->
                <url path="*/*/index"/> <!-- Back về grid listing -->
                <class>back</class> <!-- để css giống nút reset mặc định  -->
                <label translate="true">Back</label>
            </button>
            <button name="reset">
                <class>reset</class>
                <label translate="true">Reset</label>
            </button>
            <button name="save">
                <class>primary</class>
                <label translate="true">Save Movie</label>
            </button>
        </buttons>
    </settings>


    <dataSource name="movie_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
            <storageConfig>
                <!-- IndexField: Primary key cho storage (dùng khi edit) -->
                <param name="indexField" xsi:type="string">movie_id</param>
            </storageConfig>
        </settings>

        <!-- DataProvider: Class PHP cung cấp data thực tế -->
        <dataProvider
            class="Magenest\Movie\Ui\DataProvider\Movie\Form\DataProvider"
            name="movie_form_data_source"
        >
            <settings>
                <!-- RequestFieldName: Param trong URL khi edit (ví dụ: ?movie_id=1) -->
                <requestFieldName>movie_id</requestFieldName>
                <!-- PrimaryFieldName: Field chính để identify record -->
                <primaryFieldName>movie_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>


    <fieldset name="general">
        <settings>
            <label translate="true">General</label>
        </settings>


        <field name="movie_id" formElement="hidden" sortOrder="10">
            <settings>
                <dataType>text</dataType>
                <dataScope>movie_id</dataScope> <!-- Bind với data[movie_id] -->
            </settings>
        </field>

        <field name="name" formElement="input" sortOrder="20">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <dataScope>name</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule> <!-- Bắt buộc nhập -->
                </validation>
            </settings>
        </field>


        <field name="rating" formElement="input" sortOrder="30">
            <settings>
                <dataType>number</dataType>
                <label translate="true">Rating</label>
                <dataScope>rating</dataScope>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule> <!-- Phải là số -->
                    <rule name="validate-greater-than-zero" xsi:type="boolean">true</rule> <!-- > 0 -->
                </validation>
                <!-- optional: placeholder -->
                <notice translate="true">Must be a number greater than 0</notice>
            </settings>
        </field>


        <field name="director_id" formElement="select" sortOrder="40">
            <settings>
                <dataType>int</dataType>
                <label translate="true">Director</label>
                <dataScope>director_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magenest\Movie\Ui\Component\Form\DirectorOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>


        <!-- DESCRIPTION -->
        <field name="description" formElement="textarea" sortOrder="50">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <dataScope>description</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
