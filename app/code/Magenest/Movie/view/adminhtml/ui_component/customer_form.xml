<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <fieldset name="customer">
        <field name="avatar" sortOrder="90" formElement="imageUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Avatar</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="dataScope" xsi:type="string">avatar</item>
                    <item name="source" xsi:type="string">customer</item>

                    <!-- Bật image uploader -->
                    <item name="componentType" xsi:type="string">imageUploader</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/form/element/image-uploader</item>

                    <!-- Preview template có sẵn -->
                    <item name="previewTmpl" xsi:type="string">Magento_Catalog/image-preview</item>

                    <!-- URL để upload file -->
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="movie/avatar/upload"/>
                    </item>

                    <item name="allowedExtensions" xsi:type="string">jpg jpeg png</item>
                    <item name="maxFileSize" xsi:type="number">2097152</item>
                </item>
            </argument>
        </field>
    </fieldset>

    <fieldset name="avatar_tab" sortOrder="100">
        <settings>
            <label translate="true">Avatar</label>
            <collapsible>true</collapsible>
            <opened>false</opened>
        </settings>
        <htmlContent name="avatar_tab_content">
            <block class="Magenest\Movie\Block\Adminhtml\Customer\Edit\Tab\Avatar"
                   name="customer_avatar_block"
                   template="Magenest_Movie::customer/edit/tab/avatar.phtml"/>
        </htmlContent>
    </fieldset>
</form>
