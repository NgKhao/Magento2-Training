<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="product-details">
        <fieldset name="course_documents_fieldset" sortOrder="999">
            <settings>
                <label translate="true">Course Documents</label>
                <collapsible>true</collapsible>
                <opened>false</opened>
            </settings>


            <!-- ⭐ DYNAMIC ROWS - ĐÚNG CẤU TRÚC -->
            <dynamicRows name="course_documents" sortOrder="10">
                <settings>
                    <componentType>dynamicRows</componentType>
<!--                    <dataScope>course_documents</dataScope>-->
                    <addButtonLabel translate="true">Add Document</addButtonLabel>
                    <additionalClasses>
                        <class name="admin__field-wide">true</class>
                    </additionalClasses>
                </settings>

                <!-- ⭐ CONTAINER cho mỗi row -->
                <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="isTemplate" xsi:type="boolean">true</item>
                            <item name="is_collection" xsi:type="boolean">true</item>
                            <item name="componentType" xsi:type="string">container</item>
                        </item>
                    </argument>

                    <!-- ⭐ Hidden: ID -->
                    <field name="id" formElement="input">
                        <settings>
                            <dataType>text</dataType>
                            <visible>false</visible>
                        </settings>
                    </field>

                    <!-- ⭐ FIELD 1: Title -->
                    <field name="title" formElement="input">
                        <settings>
                            <dataType>text</dataType>
                            <label translate="true">Document Title</label>
<!--                            <dataScope>title</dataScope>-->
                            <validation>
                                <rule name="required-entry" xsi:type="boolean">true</rule>
                            </validation>
                        </settings>
                    </field>

                    <!-- ⭐ FIELD 2: Type -->
                    <field name="type" formElement="select">
                        <settings>
                            <dataType>text</dataType>
                            <label translate="true">Type</label>
<!--                            <dataScope>type</dataScope>-->
                            <validation>
                                <rule name="required-entry" xsi:type="boolean">true</rule>
                            </validation>
                        </settings>

                        <formElements>
                            <select>
                                <settings>
                                    <options class="Magenest\Movie\Model\Config\Source\DocumentType"/>
                                </settings>
                            </select>
                        </formElements>
                    </field>

                    <!-- ⭐ FIELD 3: Link URL -->
                    <field name="link_url" formElement="input">
                        <settings>
                            <dataType>text</dataType>
                            <label translate="true">Link URL</label>
<!--                            <dataScope>link_url</dataScope>-->
                        </settings>
                    </field>

                    <!-- ⭐ FIELD 4: File Upload -->
                    <field name="file" formElement="fileUploader">
                        <settings>
                            <componentType>fileUploader</componentType>
                            <dataType>text</dataType>
                            <label translate="true">Upload File</label>
<!--                            <dataScope>file</dataScope>-->
                        </settings>
                        <formElements>
                            <fileUploader>
                                <settings>
                                    <uploaderConfig>
                                        <param xsi:type="url" name="url" path="movie/document/upload"/>
                                        <param xsi:type="string" name="paramName">document_file</param>
                                    </uploaderConfig>
                                    <allowedExtensions>pdf doc docx csv</allowedExtensions>
                                    <maxFileSize>10485760</maxFileSize>
                                </settings>
                            </fileUploader>
                        </formElements>
                    </field>


                    <!-- ⭐ ACTION DELETE - ĐÚNG CẤU TRÚC -->
                    <actionDelete template="Magento_Backend/dynamic-rows/cells/action-delete">
                        <settings>
                            <componentType>actionDelete</componentType>
                            <label translate="true">Actions</label>
                        </settings>
                    </actionDelete>
                </container>
            </dynamicRows>
        </fieldset>
    </fieldset>
</form>
